{
  "manifest_version": 3,
  "name": "Ask LLM",
  "description": "Direct, private access to ChatGPT/Bard for fast, API-free text queries and enhancements.",
  "version": "1.1.0",
  "incognito": "spanning",
  "action": { "default_popup": "popup.html" },
  "background": {
    "service_worker": "src/scripts/service-worker.ts"
  },
  "permissions": ["activeTab", "contextMenus", "storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "js": ["src/scripts/content-scripts/chatgpt.ts"],
      "matches": ["https://chat.openai.com/*"]
    },
    {
      "js": ["src/scripts/content-scripts/bard.ts"],
      "matches": ["https://bard.google.com/chat*"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
